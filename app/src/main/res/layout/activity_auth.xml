<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.shopdemo.AuthActivity">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="物联网设备商城"
        android:textColor="#4E9ED6"
        android:textSize="32sp">
    </TextView>

    <ImageView
        android:id="@+id/dialog"
        android:background="@mipmap/diaglog"
        android:layout_width="746dp"
        android:layout_height="372dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        app:layout_constraintLeft_toLeftOf="@+id/line"
        app:layout_constraintTop_toTopOf="@id/dialog"
        android:text="检测到有设备接入进网络，是否同意接入？"
        android:textColor="#FFFFFF"
        android:textSize="28sp">
    </TextView>

    <ImageView
        android:id="@+id/line"
        android:background="@mipmap/line"
        android:layout_width="586dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/dialog"
        app:layout_constraintEnd_toEndOf="@id/dialog"
        app:layout_constraintTop_toBottomOf="@id/tip"
        android:layout_marginTop="40dp" />

    <ImageView
        android:id="@+id/device"
        android:background="@mipmap/panel"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="@id/line"
        app:layout_constraintTop_toBottomOf="@+id/line"
        android:layout_marginTop="40dp" />
    <TextView
        android:id="@+id/deviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/identity"
        app:layout_constraintBottom_toTopOf="@id/identity"
        android:layout_marginBottom="20dp"
        android:text="智能面板:"
        android:textColor="#FFFFFF"
        android:textSize="18sp">
    </TextView>
    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/deviceName"
        app:layout_constraintBaseline_toBaselineOf="@+id/deviceName"
        android:layout_marginLeft="10dp"
        android:text="12:43:19:430"
        android:textColor="#FFFFFF"
        android:textSize="18sp">
    </TextView>
    <TextView
        android:id="@+id/identity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/device"
        app:layout_constraintTop_toTopOf="@id/device"
        app:layout_constraintBottom_toBottomOf="@id/device"
        android:layout_marginLeft="20dp"
        android:text="数字身份:"
        android:textColor="#FFFFFF"
        android:textSize="18sp">
    </TextView>
    <TextView
        android:id="@+id/did"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/identity"
        app:layout_constraintBaseline_toBaselineOf="@+id/identity"
        android:layout_marginLeft="10dp"
        android:text="did:chisid:5765353e294dc53ec09bf0e70d6419fc4"
        android:textColor="#FFFFFF"
        android:textSize="18sp">
    </TextView>
    <TextView
        android:id="@+id/issuer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/identity"
        app:layout_constraintTop_toBottomOf="@id/did"
        android:layout_marginTop="20dp"
        android:text="签发方：四川长虹电器股份有限公司"
        android:textColor="#FFFFFF"
        android:textSize="18sp">
    </TextView>
    <Button
        android:id="@+id/reject"
        android:background="@drawable/button_bg"
        style="?android:attr/borderlessButtonStyle"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:text="拒绝"
        android:textColor="#00C4FF"
        android:textSize="24sp"
        android:layout_width="160dp"
        android:layout_height="46dp"
        app:layout_constraintTop_toTopOf="@+id/agree"
        app:layout_constraintRight_toLeftOf="@+id/agree"
        android:layout_marginRight="30dp"
        android:clickable="true"/>
    <Button
        android:id="@+id/agree"
        android:background="@drawable/button_bg"
        style="?android:attr/borderlessButtonStyle"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:text="同意"
        android:textColor="#00C4FF"
        android:textSize="24sp"
        android:layout_width="160dp"
        android:layout_height="46dp"
        app:layout_constraintTop_toBottomOf="@+id/dialog"
        app:layout_constraintRight_toRightOf="@id/dialog"
        android:layout_marginTop="60dp"
        android:clickable="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>