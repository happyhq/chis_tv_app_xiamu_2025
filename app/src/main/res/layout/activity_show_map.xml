<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.shopdemo.device_loc">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="设备安全接入"
        android:textColor="#4E9ED6"
        android:textSize="32sp">
    </TextView>

    <TextView
        android:id="@+id/profiledid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintRight_toRightOf="@+id/map"
        app:layout_constraintBottom_toTopOf="@id/map"
        android:layout_marginBottom="15dp"
        android:text="登录"
        android:textColor="#4E9ED6"
        android:textSize="20sp">
    </TextView>

    <ImageView
        android:id="@+id/map"
        android:background="@mipmap/map"
        android:layout_width="628dp"
        android:layout_height="496dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>
    <ImageView
        android:id="@+id/light1"
        android:background="@drawable/light_bg"
        android:clickable="true"
        android:layout_width="18dp"
        android:layout_height="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/map"
        app:layout_constraintTop_toTopOf="@+id/map"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"  />
    <ImageView
        android:id="@+id/light2"
        android:background="@drawable/light_bg"
        android:clickable="true"
        android:layout_width="18dp"
        android:layout_height="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/map"
        app:layout_constraintTop_toTopOf="@+id/map"
        android:layout_marginTop="303dp"
        android:layout_marginLeft="70dp"   />
    <ImageView
        android:id="@+id/light3"
        android:background="@drawable/light_bg"
        android:clickable="true"
        android:layout_width="18dp"
        android:layout_height="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/map"
        app:layout_constraintTop_toTopOf="@+id/map"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="440dp"   />
    <ImageView
        android:id="@+id/panel1"
        android:background="@drawable/panel_bg"
        android:clickable="true"
        android:layout_width="16dp"
        android:layout_height="22dp"
        app:layout_constraintLeft_toLeftOf="@+id/map"
        app:layout_constraintTop_toTopOf="@+id/map"
        android:layout_marginTop="94dp"
        android:layout_marginLeft="196dp"  />
    <ImageView
        android:id="@+id/panel2"
        android:background="@drawable/panel_bg"
        android:clickable="true"
        android:layout_width="16dp"
        android:layout_height="22dp"
        app:layout_constraintLeft_toLeftOf="@+id/map"
        app:layout_constraintTop_toTopOf="@+id/map"
        android:layout_marginTop="195dp"
        android:layout_marginLeft="194dp"  />
    <ImageView
        android:id="@+id/panel3"
        android:background="@drawable/panel_bg"
        android:clickable="true"
        android:layout_width="16dp"
        android:layout_height="22dp"
        app:layout_constraintLeft_toLeftOf="@+id/map"
        app:layout_constraintTop_toTopOf="@+id/map"
        android:layout_marginTop="144dp"
        android:layout_marginLeft="440dp"  />
    <Button
        android:id="@+id/buttonreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="重置"
        tools:layout_editor_absoluteX="287dp"
        tools:layout_editor_absoluteY="608dp"
        android:textColor="@android:color/black"
        android:background="@drawable/custom_button_background"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="center"
        android:textAllCaps="true"
        android:focusable="true"
        android:clickable="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>