<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.changhong.chislab.activity.PointPayActivity">
    <ImageView
        android:id="@+id/back"
        android:layout_width="35dp"
        android:layout_height="42dp"
        android:background="@drawable/backhmesele"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:clickable="true">
    </ImageView>

    <ImageView
        android:id="@+id/dialog"
        android:background="@mipmap/rectangle"
        android:layout_width="720dp"
        android:layout_height="370dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"  />
    <TextView
        android:id="@+id/tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toTopOf="@id/dialog"
        app:layout_constraintLeft_toLeftOf="@id/dialog"
        android:text="已成功付款！"
        android:textColor="#FFFFFF"
        android:textSize="32sp">
    </TextView>

    <ImageView
        android:id="@+id/success"
        android:background="@mipmap/success"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintRight_toRightOf="@id/dialog"
        app:layout_constraintTop_toTopOf="@id/dialog"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp" />

    <ImageView
        android:id="@+id/device"
        android:background="@mipmap/panel_rec"
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:layout_constraintTop_toTopOf="@id/dialog"
        app:layout_constraintBottom_toBottomOf="@id/dialog"
        app:layout_constraintLeft_toLeftOf="@id/tip" />
    <TextView
        android:id="@+id/deviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/score_tip"
        app:layout_constraintBottom_toTopOf="@+id/score_tip"
        android:layout_marginBottom="10dp"
        android:text="智能面板"
        android:textColor="#FFFFFF"
        android:textSize="42sp">
    </TextView>
    <TextView
        android:id="@+id/score_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/device"
        app:layout_constraintBottom_toBottomOf="@id/device"
        app:layout_constraintLeft_toRightOf="@id/device"
        android:layout_marginLeft="40dp"
        android:text="兑换积分"
        android:textColor="#FFFFFF"
        android:textSize="24sp">
    </TextView>
    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/score_tip"
        app:layout_constraintBaseline_toBaselineOf="@+id/score_tip"
        android:layout_marginLeft="10dp"
        android:text="5500"
        android:textColor="#FFFFFF"
        android:textSize="24sp">
    </TextView>
    <TextView
        android:id="@+id/tip_remain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/score_tip"
        app:layout_constraintTop_toBottomOf="@id/score_tip"
        android:layout_marginTop="15dp"
        android:text="剩余积分"
        android:textColor="#FFFFFF"
        android:textSize="24sp">
    </TextView>
    <TextView
        android:id="@+id/score_remain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/tip_remain"
        app:layout_constraintBaseline_toBaselineOf="@+id/tip_remain"
        android:layout_marginLeft="10dp"
        android:text="1002050"
        android:textColor="#FFFFFF"
        android:textSize="24sp">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>