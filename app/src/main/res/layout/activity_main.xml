<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    tools:context="com.example.shopdemo.MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="物联网设备商城"
        android:textColor="#4E9ED6"
        android:textSize="32sp">
    </TextView>
    <ImageView
        android:id="@+id/btn_a"
        android:background="@drawable/btn_a_bg"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintRight_toLeftOf="@id/btn_b"
        android:clickable="true"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="30dp" />
    <ImageView
        android:id="@+id/btn_b"
        android:background="@drawable/btn_b_bg"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="@+id/btn_a"
        app:layout_constraintLeft_toRightOf="@id/btn_a"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@id/btn_c"
        android:layout_marginLeft="15dp"/>
    <ImageView
        android:id="@+id/btn_c"
        android:background="@drawable/btn_c_bg"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="@+id/btn_b"
        app:layout_constraintLeft_toRightOf="@id/btn_b"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="45dp"/>
    <ImageView
        android:id="@+id/btn_d"
        android:background="@drawable/btn_d_bg"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:clickable="true"
        app:layout_constraintLeft_toLeftOf="@id/btn_a"
        app:layout_constraintTop_toBottomOf="@+id/btn_a"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toLeftOf="@id/btn_e"
        app:layout_constraintHorizontal_weight="1"/>
    <ImageView
        android:id="@+id/btn_e"
        android:background="@drawable/btn_e_bg"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="@+id/btn_d"
        app:layout_constraintLeft_toRightOf="@+id/btn_d"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@id/btn_f"
        android:layout_marginLeft="15dp"/>
    <ImageView
        android:id="@+id/btn_f"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="@+id/btn_e"
        app:layout_constraintLeft_toRightOf="@+id/btn_e"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="45dp"/>
    <TextView
        android:id="@+id/text_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@id/btn_a"
        app:layout_constraintLeft_toLeftOf="@id/btn_a"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="30dp"
        android:text="球泡灯"
        android:textStyle="bold"
        android:textColor="#333333"
        android:textSize="32sp">
    </TextView>
    <TextView
        android:id="@+id/text_a_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/text_a"
        app:layout_constraintTop_toBottomOf="@+id/text_a"
        android:text="5500积分"
        android:textStyle="bold"
        android:textColor="#0097EF"
        android:textSize="26sp">
    </TextView>


    <TextView
        android:id="@+id/text_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/text_a"
        app:layout_constraintLeft_toLeftOf="@+id/btn_b"
        android:layout_marginLeft="30dp"
        android:text="蜡烛灯"
        android:textStyle="bold"
        android:textColor="#333333"
        android:textSize="32sp">
    </TextView>
    <TextView
        android:id="@+id/text_b_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="@id/text_b"
        app:layout_constraintTop_toBottomOf="@+id/text_b"
        android:text="5500积分"
        android:textStyle="bold"
        android:textColor="#0097EF"
        android:textSize="26sp">
    </TextView>


    <TextView
        android:id="@+id/text_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/text_a"
        app:layout_constraintLeft_toLeftOf="@+id/btn_c"
        android:layout_marginLeft="30dp"
        android:text="智能墙插"
        android:textStyle="bold"
        android:textColor="#333333"
        android:textSize="32sp">
    </TextView>
    <TextView
        android:id="@+id/text_c_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="@id/text_c"
        app:layout_constraintTop_toBottomOf="@+id/text_c"
        android:text="5500积分"
        android:textStyle="bold"
        android:textColor="#0097EF"
        android:textSize="26sp">
    </TextView>

    <TextView
        android:id="@+id/text_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/btn_d"
        app:layout_constraintLeft_toLeftOf="@id/text_a"
        android:layout_marginTop="56dp"
        android:text="智能面板"
        android:textStyle="bold"
        android:textColor="#333333"
        android:textSize="32sp">
    </TextView>
    <TextView
        android:id="@+id/text_d_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="@id/text_d"
        app:layout_constraintTop_toBottomOf="@+id/text_d"
        android:text="5500积分"
        android:textStyle="bold"
        android:textColor="#0097EF"
        android:textSize="26sp">
    </TextView>

    <TextView
        android:id="@+id/text_e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        app:layout_constraintLeft_toLeftOf="@id/text_b"
        app:layout_constraintTop_toTopOf="@id/btn_e"
        android:text="双色筒灯"
        android:textStyle="bold"
        android:textColor="#333333"
        android:textSize="32sp">
    </TextView>
    <TextView
        android:id="@+id/text_e_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="@id/text_e"
        app:layout_constraintTop_toBottomOf="@+id/text_e"
        android:text="5500积分"
        android:textStyle="bold"
        android:textColor="#0097EF"
        android:textSize="26sp">
    </TextView>
    <ImageView
        android:id="@+id/image"
        android:background="@mipmap/score"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintRight_toLeftOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/score"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/score"
        app:layout_constraintRight_toLeftOf="@+id/score"
        android:text=""
        android:textColor="#00C4FF"
        android:textSize="24sp">
    </TextView>
    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@+id/btn_c"
        app:layout_constraintBottom_toTopOf="@id/btn_c"
        android:layout_marginBottom="15dp"
        android:text="登录"
        android:textColor="#00C4FF"
        android:textSize="24sp">
    </TextView>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/custom_button_background"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        android:text="智能家居设备图"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>